{% set image = acf.image %}
{% set alignment = acf.value %}
{% if alignment == "single" %}
  {% set url = post.get_field('single_url') %}
{% elseif link_type == "external" %}
  {% set url = post.get_field('external_url') %}
{% else %}
  {% set url = post.get_field('search_url') %}
{% endif %}

<div class="{{'Block'|modifiers("panel, #{alignment}, #{tinted}")}}">

<section class="{{'Banner'|modifiers('medium, textbottom, {{acf.alignment}}')}} wrapper wrapper--narrow lazyload"
data-bgset="
  {{image[xxlarge]}} [(min-width: {{xxl}})] |
  {{image[xlarge]}} [(min-width: {{lg}})] |
  {{image[large]}} [(min-width: {{md}})] |
  {{image[medium]}} [(min-width: {{sm}})] |
  {{image[small]}}"
style="{% if acf.alignment == "custom" %}background-position: center {{acf.custom_alignment}}%;{% endif %}">
  <div class="Banner-overlay"></div>
  <div class="container container--max">
    <h1>{{post.title|title}}</h1>
  </div>
</section>
