{% set image = data.figure %}

{# Response image wrapper depending on columns #}
{% if column == 'four'%}
  <figure class="{{'Figure'|modifiers("#{data.direction}")}}">
    <picture>
      <!--[if IE 9]><video style="display: none;"><![endif]-->
        <source media="(min-width: {{xl}})" data-srcset="{{image[small]}}">
        <source media="(min-width: {{md}})" data-srcset="{{image[middle]}}">
        <source media="(min-width: {{sm}})" data-srcset="{{image[medium]}}">
        <source data-srcset="{{image[middle]}}">
      <!--[if IE 9]></video><![endif]-->
      {# Fallback with transparent LQIP #}
      <img alt="{{image.title}}" class="lazyload" data-src="{{image[middle]}}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
    </picture>
    <figcaption class="Figure-caption container--text-nosidebar">
      {{data.caption}}
    </figcaption>
  </figure>
{% endif %}

