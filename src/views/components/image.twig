{% set images = data.figure|first %}
<figure class="Figure Figure--{{data.direction}}">
  <picture>
    <!--[if IE 9]><video style="display: none;"><![endif]-->

    {# Desktops #}
    <source media="(min-width: {{lg}})" data-srcset="{{images[xlarge]}}">

    {# Tablets #}
    <source media="(min-width: {{md}}) and (min-height: {{tall}})" data-srcset="{{images[large]}}">

    {# Landscape phones #}
    <source media="(min-width: {{sm}}) and (max-height: {{tall}})" data-srcset="{{images[medium]}}">

    {# Portrait phones #}
    <source media="(max-width: {{sm}}) and (max-height: {{short}})" data-srcset="{{images[small]}}">
    <!--[if IE 9]></video><![endif]-->

    {# Fallback with transparent LQIP #}
    <img alt="{{images.title}}" class="lazyload" data-src="{{images[medium]}}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
  </picture>

  <figcaption class="Figure-caption">{{data.caption}}</figcaption>
</figure>
