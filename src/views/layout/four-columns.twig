{% set isLandingCallout = landingCallout ? 'landing' : '' %}
{% set withCalloutTheme = landingCalloutTheme ? landingCalloutTheme ~ 'Theme' : '' %}

{% if landingCalloutBg %}
  {% set withBg = true %}
  {% set withCalloutBg = 'fullbleed' %}
  {% set bgset = 'data-bgset="' ~
    landingCalloutBg[xlarge] ~
    ' [(min-width: ' ~ lg ~ ')] | ' ~
    landingCalloutBg[large] ~
    ' [(min-width: ' ~ md ~ ')] | ' ~ landingCalloutBg[medium] ~ '"' %}
{% endif %}

{% if landingCallout %}
<div class="{{'Callout'|modifiers("#{isLandingCallout}, #{withCalloutBg}, #{withCalloutTheme}")}}{{withBg ? ' lazyload' : ''}}" {{withBg ? bgset : ''}}>
  <div class="container">
{% endif %}
    <div class="row row--of-4">

      {# Don't create column div if there's no content #}
      {% if left %}
      <div class="column">
        {% if leftCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block left %}{% endblock %}
        {% if leftCallout %}
          </div>
        {% endif %}
      </div>
      {% endif %}

      {% if mid_left %}
      <div class="column">
        {% if mid_leftCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block mid_left %}{% endblock %}
        {% if mid_leftCallout %}
          </div>
        {% endif %}
      </div>
      {% endif %}

      {% if mid_right %}
      <div class="column">
        {% if mid_rightCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block mid_right %}{% endblock %}
        {% if mid_rightCallout %}
          </div>
        {% endif %}
      </div>
      {% endif %}

      {% if right %}
      <div class="column">
        {% if rightCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block right %}{% endblock %}
        {% if rightCallout %}
          </div>
        {% endif %}
      </div>
      {% endif %}

    </div>
{% if landingCallout %}
  </div>
</div>
{% endif %}
