{% if landingCallout %}
<div class="Callout Callout--landing">
  <div class="container">
{% endif %}
    <div class="row row--of-4">

      <div class="column">
        {% if leftCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block left %}{% endblock %}
        {% if leftCallout %}
          </div>
        {% endif %}
      </div>

      <div class="column">
        {% if mid_leftCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block mid_left %}{% endblock %}
        {% if mid_leftCallout %}
          </div>
        {% endif %}
      </div>

      <div class="column">
        {% if mid_rightCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block mid_right %}{% endblock %}
        {% if mid_rightCallout %}
          </div>
        {% endif %}
      </div>

      <div class="column">
        {% if rightCallout %}
          <div class="Callout Callout--column">
        {% endif %}
        {% block right %}{% endblock %}
        {% if rightCallout %}
          </div>
        {% endif %}
      </div>

    </div>
{% if landingCallout %}
  </div>
</div>
{% endif %}
