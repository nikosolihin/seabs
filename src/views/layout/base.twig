{% for section in sections %}

  {% if section.acf_fc_layout == 'one_column' %}
    {% include 'layout/columns.twig' with {
      'column': 'one',
      'landingCallout': section.is_section_callout,
      'landingCalloutTheme': section.section_callout_theme,
      'landingCalloutBg': section.section_callout_bg_image,
      'full': section.full_components,
      'fullCallout': section.right_column_options
    } %}

  {% elseif section.acf_fc_layout == 'two_columns' %}
    {% include 'layout/columns.twig' with {
      'column': 'two',
      'landingCallout': section.is_section_callout,
      'landingCalloutTheme': section.section_callout_theme,
      'landingCalloutBg': section.section_callout_bg_image,
      'left': section.left_components,
      'right': section.right_components,
      'leftCallout': section.left_column_options,
      'rightCallout': section.right_column_options
    } %}

  {% elseif section.acf_fc_layout == 'three_columns' %}
    {% include 'layout/columns.twig' with {
      'column': 'three',
      'landingCallout': section.is_section_callout,
      'landingCalloutTheme': section.section_callout_theme,
      'landingCalloutBg': section.section_callout_bg_image,
      'left': section.left_components,
      'mid': section.mid_components,
      'right': section.right_components,
      'leftCallout': section.left_column_options,
      'midCallout': section.mid_column_options,
      'rightCallout': section.right_column_options
    } %}

  {% else %}
    {% include 'layout/columns.twig' with {
      'column': 'four',
      'landingCallout': section.is_section_callout,
      'landingCalloutTheme': section.section_callout_theme,
      'landingCalloutBg': section.section_callout_bg_image,
      'left': section.left_components,
      'mid_left': section.mid_left_components,
      'mid_right': section.mid_right_components,
      'right': section.right_components,
      'leftCallout': section.left_column_options,
      'rightCallout': section.right_column_options,
      'mid_leftCallout': section.mid_left_column_options,
      'mid_rightCallout': section.mid_right_column_options
    } %}

  {% endif %}
{% endfor %}
