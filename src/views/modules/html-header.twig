<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
<head>
  <meta charset="{{site.charset}}" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {# The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags #}

  <title>
    {% if wp_title %}
      {{ wp_title }} - {{ site.name }}
    {% else %}
      {{ site.name }}
    {% endif %}
  </title>

  {# Short description of the page (limit to 150 characters) #}
  <meta name="description" content="{{acf.teaser}}">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

  {# Stylesheet #}
  <link rel="stylesheet" href="{{site.theme.uri}}/stylesheets/app.css">
  <!-- <link rel="dns-prefetch" href="//www.google-analytics.com"> -->

  {# Favicons #}
  {% include 'modules/favicons.twig' %}
  {# Social Tags #}
  {% include 'modules/social-tags.twig' %}

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  {{function('wp_head')}}
</head>
